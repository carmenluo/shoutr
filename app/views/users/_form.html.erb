<div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email' %>
</div>
<div class="text-field">
  <%= form.label :username %>
  <%= form.text_field :username %>
</div>

<div class="password-field">
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>
<div>
  <%= form.label :avatar %>
  <%= form.file_field :avatar, placeholder: "Choose you avatar", accept: 'image/png, image/jpg, image/gif'%>
</div>
